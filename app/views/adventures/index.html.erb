<div class="cards-and-map">
    <div class="card-grid">
        <% @adventures.each do |adventure| %>
            <div class="card" style="width: 18rem;">
              <% if adventure.photo.key? %>
                <%= cl_image_tag adventure.photo.key, height: 300, width: 400, crop: :fill %>
              <% else %>
                <%= image_tag "https://images.unsplash.com/photo-1531804055935-76f44d7c3621?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80", height: 300, width: 400, crop: :fill %>
              <% end %>
              <div class="card-body">
                <h3 class="card-title"> <strong><%= adventure.name %></strong></h3>
                <p class="card-text"><%= adventure.description %></p>
              </div>
              <ul class="list-group list-group-flush">
                <li class="list-group-item">Location: <strong><%= adventure.location %></strong></li>
                <li class="list-group-item">Price: <strong><%= adventure.price %> euros / day</strong></li>
                <li class="list-group-item">Max # of participants: <strong><%= adventure.number_of_guests %></strong></li>
              </ul>
              <div class="card-body">
                  <%= link_to "Go on an adventure!", adventure, class: "btn btn-primary w-100" %>
              </div>
            </div>
        <% end %>
    </div>

  <div class="map">
    <img src='https://api.mapbox.com/styles/v1/mapbox/streets-v11/static/2.3381,48.8693,10.45,0,0/600x1000?access_token=pk.eyJ1IjoiamdrYnVybmVyIiwiYSI6ImNrN3Z3MW5nYzAyNjYzbnFuMnB5aW4yNzMifQ.oWMlL1-03HBJ-sCks4MeMg'>
  </div>
</div>
