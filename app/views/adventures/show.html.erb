<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="card-show">
        <% if @adventure.photo.attached? %>
          <%= cl_image_tag @adventure.photo.key, height: 300, width: 400, crop: :fill %>
        <% else %>
          <%= image_tag "https://source.unsplash.com/random/400x300", crop: :fill, class: "pb-3" %>
        <% end %>
        <h2><%= @adventure.name %></h2>
        <li>No. of guests: <%= @adventure.number_of_guests %></li>
        <li>Supported languages: <%= @adventure.languages %></li>
        <li>Description: <%= @adventure.description %></li>
      </div>
      <div class="card-show">
        <h3>Meetup point for your adventure:</h3>
        <h5><%= @adventure.location %></h5> <!-- EVENTUALLY MAKE THIS INTO MAP -->
        <div
        id="map"
        style="width: 100%;
        height: 400px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
        ></div>
      </div>

      <div class="card-show">
        <%= link_to 'Back to list', adventures_path, class: "btn btn-adventure w-100"%>
      </div>
    </div>

    <div class="col-4">
      <div class="sticky-top">
      <div class="card-show">
        <h3><%= @adventure.price %>â‚¬</h3>
        <p>(Price per day)</p>
        <h4> Start date </h4>
        <p>ADD FORM</p>
        <h4> End date date </h4>
        <p>ADD FORM</p>
        <a href="#" class="btn btn-adventure w-100">Request booking</a>
      </div>
      </div>
    </div>
  </div>
  <!-- <%#= link_to 'Book Adventure!', new_adventure_booking_path(@adventure) %> -->
</div>



