<div class="container-fluid d-flex">
  <div class="card-show" id="card-dashboard">
    <h1>Adventures you're hosting</h1>
    <% Adventure.all.each do |adventure| %>
    <% if current_user.id == adventure.user_id %>
    <div class="card-product">
      <div class="img-adv">
        <% if adventure.photo.attached? %>
        <%= cl_image_tag adventure.photo.key%>
        <% else %>
        <%= image_tag "https://source.unsplash.com/random"%>
        <% end %>
      </div>
      <div class="card-product-infos">
        <h2> <%= link_to "#{adventure.name}", adventure_path(adventure) %> </h2>
        <p><%= adventure.description %></p>
        <p>Price per day: <%= adventure.price %>; Number of guests: <%= adventure.number_of_guests %></p>
      </div>
    </div>
    <% else %>
    <%= nil %>
    <% end %>

    <% end %>
  </div>

  <div class="card-show" id="card-dashboard">
    <h1>Your accepted booking requests</h1>
    <% Booking.all.each do |booking| %>
      <% if current_user.id == booking.adventure.user_id && booking.status == "accepted" %>
        <div class="card-product">
          <div class="img-adv">
            <% if booking.adventure.photo.attached? %>
              <%= cl_image_tag booking.adventure.photo.key%>
            <% else %>
              <%= image_tag "https://source.unsplash.com/random"%>
            <% end %>
          </div>
          <div class="card-product-infos">
            <h2 class="booking">Booking request for <%= booking.adventure.name %> from the <%= booking.start_date %> to the <%= booking.end_date %></h2>
            <p><%= booking.adventure.description %></p>
            <p>Total price: <strong><%= booking.adventure.price %></p>
          </div>
          <%= link_to "Add review", new_booking_review_path(booking), id: "add-review" %>
        </div>
      <% else %>
        <p>You do not have any booked adventures</p>
      <% end %>
    <% end %>
  </div>

  <div class="card-show" id="card-dashboard">
    <h1>Your pending booking requests</h1>
    <% Booking.all.each do |booking| %>
      <% if current_user.id == booking.adventure.user_id && booking.status == "pending" %>
        <div class="card-product">
          <div class="img-adv">
            <% if booking.adventure.photo.attached? %>
              <%= cl_image_tag booking.adventure.photo.key%>
            <% else %>
              <%= image_tag "https://source.unsplash.com/random"%>
            <% end %>
          </div>
        <div class="card-product-infos">
          <h2 class="booking">Booking request for <%= booking.adventure.name %> from the <%= booking.start_date %> to the <%= booking.end_date %></h2>
          <p><%= booking.adventure.description %></p>
          <p>Total price: <strong><%= booking.adventure.price %></p>
        </div>
          <%= link_to "Accept booking", PATH, method: :patch %>
          <%= link_to "Decline booking", PATH, method: :patch %>
        </div>
      <% else %>
        <%= nil %>
      <% end %>
    <% end %>
  </div>
</div>
