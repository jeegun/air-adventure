<%= simple_form_for @adventure do |f| %>
<%= f.input :name %>
<%= f.input :number_of_guests %>
<%= f.input :price  %>
<%= f.input :languages  %>
<%= f.input :description  %>
<%= f.input :location  %>

<!-- photo button -->
<label class="btn btn-secondary btn-block">
  Add a photo!
  <span style="display:none;">
    <%= f.input :photo, as: :file %>
  </span>
</label>

<!-- submit photo button -->
<%= f.submit "Add Adventure", class: "btn btn-adventure btn-block" %>

<% end %>
