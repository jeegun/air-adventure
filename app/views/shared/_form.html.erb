  <div class="form-container">
    <div class="container">
      <div class="row justify-content-center">
        <div class="new-form col-12 pt-3 pb-3">
          <div class="form-card">
            <h1>List an adventure</h1>
            <br>
            <%= simple_form_for @adventure do |f| %>
            <%= f.input :name %>
            <%= f.input :number_of_guests %>
            <%= f.input :price  %>
            <%= f.input :languages  %>
            <%= f.input :description  %>
            <%= f.input :location  %>
            <br>
            <!-- photo button -->
            <label class="btn btn-secondary btn-block">
              Add a photo! *
              <span style="display:none;">
                <%= f.input :photo, as: :file %>
              </span>
            </label>
            <br>

            <!-- submit photo button -->
            <%= f.submit "Add Adventure", class: "btn btn-adventure btn-block" %>

            <% end %>
          </div>s
        </div>
      </div>
    </div>
  </div>
